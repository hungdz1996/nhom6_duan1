<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.Toolbar
        app:title="Thông Tin"
        android:id="@+id/toolbarthongtin"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/teal_200">

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout

        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/anhdep"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông Tin Về Chúng Tôi"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#F10606"/>
<LinearLayout
    android:background="@drawable/border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="30dp"
    android:layout_gravity="center">
    <TextView

        android:gravity="center"
        android:textSize="20sp"
        android:text="Địa Chỉ: Số nhà 16 lk 32 KĐT Vân Canh Hoài Đức "
        android:textColor="#F10606"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
        <LinearLayout
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="30dp"
            android:layout_gravity="center">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actyvity.ThongTinActivityActivity" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
